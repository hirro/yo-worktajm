section(full-height='min', ng-style='style()')#contact
	.container
		.row
			.col-lg-12.text-center
				h2.section-heading Sign up
				h3.section-subheading.text-muted Start filing in your time reports now!
		.row
			.col-lg-12
				form#contactForm(name='form', ng-submit='register(form)', novalidate='novalidate')
					.row
						.col-md-offset-3.col-md-6
							.form-group
								input#name.form-control(
									type='text', 
									placeholder='Your Name *', 
									required='required', 
									data-validation-required-message='Please enter your name.',
									ng-model='user.name')
								p.help-block.text-danger
					.row
						.col-md-offset-3.col-md-6
							.form-group
								input#email.form-control(
									type='email', 
									placeholder='Your Email *', 
									required='required', 
									data-validation-required-message='Please enter your email address.',
									ng-model='user.email')
								p.help-block.text-danger
					.row
						.col-md-offset-3.col-md-6
							.form-group
								input#email.form-control(
									type='password', 
									placeholder='Your Password *', 
									required='required', 
									data-validation-required-message='Please enter your password',
									ng-model='user.password')
								p.help-block.text-danger
						.clearfix
						.col-lg-12.text-center
							#success
							button.btn.btn-login(type='submit') Join
